{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": ["**/.env"],
	"pipeline": {
		"dev": {
			"persistent": true,
			"cache": false
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", ".expo/**", ".dist/**"]
		},
		"lint": {},
		"lint:fix": {},
		"clean": {
			"cache": false
		},
		"//#clean": {
			"cache": false
		},
		"type-check": {
			"cache": false
		}
	},
	"globalEnv": [
		"CI",
		"NODE_ENV",
		"SANITY_TOKEN",
		"SKIP_ENV_VALIDATION",
		"VERCEL",
		"VERCEL_URL"
	]
}
